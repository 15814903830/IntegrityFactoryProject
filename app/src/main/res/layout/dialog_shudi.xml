<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/photograph_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shudi"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/shousuo" />

            <EditText
                android:id="@+id/ed_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索单位监护人" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:background="#FFFFFF"
            android:id="@+id/rv_safetyworkpermitsign_dtail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="15dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>