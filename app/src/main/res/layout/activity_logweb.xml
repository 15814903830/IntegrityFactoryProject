<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mylogin.LogwebActivity">
<com.xsylsb.integrity.view.StatusBarHeightView
    app:use_type="use_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></com.xsylsb.integrity.view.StatusBarHeightView>
    <WebView
        android:id="@+id/wv_web"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></WebView>
    <Button
        android:onClick="ShowMain"
        android:background="#00AD7C"
        android:text="点击进入首页"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>